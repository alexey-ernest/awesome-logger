@using AwesomeLogger.Web.Models
@model LoginModel
@{
    ViewBag.Title = "Sign in to Awesome Logger Application";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel">
            <div class="panel-body">
                <h1>Sign in</h1>

                @Html.ValidationSummary(true)

                <form class="form-horizontal text-left" method="POST">
                    <div class="form-group">
                        <div class="col-sm-6 col-sm-offset-3">
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = @Html.DisplayNameFor(x => x.UserName) })
                            @Html.ValidationMessageFor(x => x.UserName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-6 col-sm-offset-3">
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = @Html.DisplayNameFor(x => x.Password) })
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-sm-6 col-sm-offset-3">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(x => x.RememberMe) @Html.DisplayNameFor(x => x.RememberMe)
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-6 col-sm-offset-3">
                            <button type="submit" class="btn btn-default">Sign in</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
